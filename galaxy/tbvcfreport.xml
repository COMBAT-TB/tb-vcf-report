<?xml version="1.0"?>
<tool id="tbvcfreport" name="M. tuberculosis VCF Report" version="0.0.1" profile="17.01">
  <description>Annotate SnpEff VCF with links to Combat TB Explorer database</description>

  <requirements>
    <requirement type="package">tbvcfreport</requirement>
  </requirements>

  <command detect_errors="exit_code"><![CDATA[
    ln -s '$input_vcf' data.vcf &&
    tbvcfreport generate data.vcf &&
    mv data.html '$output'
    ]]>
  </command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf" label="Input VCF (with SnpEff annotation)" />
  </inputs>

  <outputs>
    <data name="output" format="html" label="M. tuberculosis VCF report on ${on_string}" />
  </outputs>

  <tests>
    <test>
      <param name="input_vcf" value="data.vcf" />
      <output name="output" compare="diff" lines_diff="2" file="data.html" ftype="html" />
    </test>
  </tests>

  <help><![CDATA[
    The input to this tool has to be a VCF file compared with
    ]]>
  </help>

  <citations>
  </citations>
</tool>
