<?xml version="1.0"?>
<tool id="tbvcfreport" name="M. tuberculosis VCF Report" version="@TOOL_VERSION@+galaxy0" profile="17.01">
  <description>Annotate SnpEff VCF with links to Combat TB Explorer database</description>

  <macros>
    <token name="@TOOL_VERSION@">0.0.5</token>
  </macros>

  <requirements>
    <requirement type="package" version="@TOOL_VERSION@">tbvcfreport</requirement>
  </requirements>

  <command detect_errors="exit_code"><![CDATA[
    ln -s '$input_vcf' data.vcf &&
    tbvcfreport generate data.vcf &&
    mv data.html '$output'
    ]]>
  </command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf" label="Input VCF (with SnpEff annotation)" />
  </inputs>

  <outputs>
    <data name="output" format="html" label="M. tuberculosis VCF report on ${on_string}" />
  </outputs>

  <tests>
    <test>
      <param name="input_vcf" value="sample1.vcf" />
      <output name="output" compare="diff" lines_diff="2" file="sample1.html" ftype="html" />
    </test>
  </tests>

  <help><![CDATA[
    This tool generates an HTML-based VCF report from an input SnpEff VCF file.
    The input has to be a SnpEff generated VCF file.
    ]]>
  </help>

  <citations>
  </citations>
</tool>
